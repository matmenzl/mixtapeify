<div class="page-header">
  <h1>Mixtapes
  <%= link_to "Post a new MXTP", new_status_path, class: "btn btn-small btn-primary" %>
</h1>
</div>



<% @statuses.each do |status| %>
<div class="status">
  <strong><%= status.name %></strong>
  <p><%= status.content %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(status.created_at) + " ago", status %> 
    <span class="admin">
      | <%= link_to "Edit", edit_status_path(status) %>
      | <%= link_to "Delete", status, method: :delete, data:{ confirm: "Are you sure you want to delete this Mixtape?"} %>
    </span>
  </div>
</div>

<% end %>



